let configpath = '/Users/lance.johnston/.cvimrc'
set localconfig

set noautofocus
set smoothscroll

let scrollstep = 25

let barposition = "top"

" Keys {{{
"
" Since chrome doesn't allow cvim to work on all sites, keys should also be
" mapped at the browser level to match these mappings when possible.
"

map <C-f> scrollFullPageDown
map <C-b> scrollFullPageUp

" Close current tab 
map <C-d> :quit<cr>                 

" Don't want these default tab navigation keys.
unmap K R J E
map R reloadTabUncached

map - goUpUrl
map <C--> goToRootUrl

" Insert mode (i.e. text field) mappings.
" Note that these match my .vimrc.
iunmap <C-i> <C-e> <C-u> <C-o> <C-y> <C-p> <C-h> <C-l> <C-f> <C-b> <C-j> <C-k>
imap <C-l> forwardChar
imap <C-h> backwardChar
imap <C-y> backwardWord
imap <C-o> forwardWord
imap <C-b> beginningOfLine
imap <C-e> endOfLine
imap <C-j> forwardLine
imap <C-k> backwardLine
imap <C-x> deleteForwardChar
imap <C-w> deleteWord

" }}}

" I believe that to use strings on the command-line, 
" they must be referenced as variables.
let @@google = 'https://google.com'

map gh :open @@google<cr>
map gH :tabnew @@google<cr>

" Turn autofus on for google.
" site '*://*google.com' {
"     set autofocus
" }
